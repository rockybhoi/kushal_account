<!-- Cancel popup -->
<div class="order_refund_main" style="display:none">
  <div class="order_refund_inner">
    <div class="order_ref_close order_ref_close_icon">{% render 'svg-x' %}</div>
    <h3>Cancel Product</h3>
    <p>Are you sure you want to cancel this product?</p>
    <div class="order_foorer_btn">
      <button class="order_pop_close">Close</button>
      <button class="order_cancel_btn">Cancel Item</button>
    </div>
  </div>
</div>

{% capture product_details%}
     <div class="refund_item_count">Refund Item</div>
    {% for line_item in order.line_items %}
            {% if line_item.fulfillment.tracking_number == ct_param_value %}
             
              <div class="refund_item_content">
                <div class="refund_item_img">
                  <img src="{{ line_item.product.featured_image | img_url: 'master' }}">
                  </div>
                <div class="refund_item_left">
                  <div class="item_title">{{ line_item.product.title }}</div>
                  <div class="item_quantity">Qty: {{ line_item.quantity }}</div>
                  {% if line_item.product.variants.size > 1 %}
                    <div class="item_varient">{{ line_item.variant.title }}</div>
                  {% endif %}
                  <div class="item_price">
                    {{ line_item.final_price | money }}
                    <div class="payment_type">| {{ order.gateway }}</div>
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
{% endcapture %}

<div class="order_refund_main_content">
  <div class="order_refund_inner_content">
    <div class="order_refund_header" style='display:none'>
      <svg width="80" height="78" viewBox="0 0 80 78" fill="none" xmlns="http://www.w3.org/2000/svg">
        <ellipse cx="40.125" cy="38.8125" rx="39.375" ry="38.8125" fill="#04A686"/>
        <path d="M24.375 39.1677L34.8604 49.5033L55.8684 28.832" stroke="white" stroke-width="5.625" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <h2>Return Request Placed</h2>
        {{ product_details }}
      <div class="refund_item_footer">
        <div class="refund_item_footer_box">
          <h2>Refund Details</h2>
          <p>Refund will be processed to the same account from where the payment was made.</p>
        </div>
        <div class="refund_item_footer_box">
          <h2>Notification</h2>
          <p>You will receive an email/sms confirming the cancellation of order shortly.</p>
        </div>
      </div>
    </div>
    <div class="refund_item_main">
      
      {{ product_details }}
      <div class="refund_item_body">
        <h2>Why do you want to return ?</h2>
        <p>Please choose the reason for return</p>
        <select class="ct_select_refund_reason">
          <option>Select Reason for Return *</option>
          <option>Missed estimated delivery date</option>
          <option>Item defective or doesn't work</option>
          <option>Description on website was not accurate</option>
          <option>Wrong color received</option>
          <option>Item defective or doesn't work</option>
          <option>Wrong item was sent</option>
          <option>Wrong color received</option>
          <option>Product is not as expected</option>
          <option>Polish is not as expected</option>
          <option>Didn't fit - Too large</option>
          <option>Didn't fit - Too small</option>
        </select>
        <textarea name="" id="" placeholder="Additional Comments"></textarea>

        <div class="refund-container refund">
          <h2>Upload Image *</h2>
          <p>Please upload only .jpeg or .png</p>
          <div class="refund_img_upload">
          <div class="img_upload">
            <img src="https://cdn.shopify.com/s/files/1/0796/1959/files/add-image_3.png?v=1726637939">
           {% render 'svg-x' %} 
          </div>
          <div class="img_upload_sec">
            <img src="https://cdn.shopify.com/s/files/1/0796/1959/files/input_file.png?v=1726640121">
            <input type="file" id="avatar" name="avatar" accept="image/png, image/jpeg" />
          </div>
            
        </div>
      </div>
      <div class="refund_item_footer_btn">
        <button class="refund_back">Back</button>
        <button class="refund_submit">Request Return</button>
      </div>
    </div>
  </div>
</div>
