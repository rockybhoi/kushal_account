      <div class="ct_blocker"></div>
      <div class="Look_product_main hover-img-false ">
      <div class="Look_product_inner_header">
        <span>{{ section.settings.coll_name }}</span>
        <svg class="close_pop" width="23" height="23" viewBox="0 0 23 23" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M11.4998 21.0837C16.7707 21.0837 21.0832 16.7712 21.0832 11.5003C21.0832 6.22949 16.7707 1.91699 11.4998 1.91699C6.229 1.91699 1.9165 6.22949 1.9165 11.5003C1.9165 16.7712 6.229 21.0837 11.4998 21.0837Z" fill="#ECECEC" stroke="#ECECEC" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M8.78809 14.2123L14.2123 8.78809" stroke="#A02828" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M14.2123 14.2123L8.78809 8.78809" stroke="#A02828" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
      <div class="Look_product_inner  ">



        
            


             {% assign pro3 = section.settings.product_list %}
              {% for product in pro3 %}
           {% render 'product-block', numb: forloop.index, per_row: section.settings.grid, product: product, manual_image_load: section.settings.enable_carousel, custom_aspect_ratio: chosen_aspect_ratio, no_swiping: section.settings.enable_carousel, no_quick_buy_markup: section.settings.enable_carousel %}
               {% endfor %} 
              





        
      </div>
      </div>
    </div>
</div>

              

<script>
var $body = $('body');

jQuery(document).on("click", ".ctt_{{ section.id }} .look-btn", function() {
    $(this).closest('.ctt_{{ section.id }}').find(".ct_popup_d").addClass('open-pop');
    $body.addClass('mm-no-scroll');
});

jQuery(document).on("click", ".ctt_{{ section.id }} .ct_blocker", function() {
    $(this).closest('.ctt_{{ section.id }}').find(".ct_popup_d").removeClass('open-pop');
    $body.removeClass('mm-no-scroll');
});

jQuery(document).on("click", ".ctt_{{ section.id }} .close_pop", function() {
    $(this).closest('.ctt_{{ section.id }}').find(".ct_blocker").trigger('click');  // Trigger a click on the ct_blocker
});

</script>
{% schema %}
{
  "name": "New-shop-the-look",
  "class": "New-shop-the-look",
  "settings": [
     {
        "type": "image_picker",
        "id": "img_icon_banner",
        "label": "Desktop Banner Image"
      },
    {
        "type": "image_picker",
        "id": "img_icon_banner_mob",
        "label": "Mobile Banner Image"
      },
    {
        "type": "video",
        "id": "video",
        "label": "A Shopify-hosted video"
      },
    {
          "type": "text",
          "id": "head",
          "label": "heading",
          "default": "Shop The Look"
        },
    {
          "type": "text",
          "id": "sec",
          "label": "mini heading",
          "default": "Collection Name"
        },
        {
          "type": "textarea",
          "id": "sec_text",
          "label": "Sub text"
        },

      {
      "type": "product_list",
      "id": "product_list",
      "label": "Products",
      "limit": 10
      },
    {
          "type": "text",
          "id": "coll_name",
          "label": "Pop-up heading",
          "default": "Collection Name"
        }
  ],
  "presets": [
    {
      "name": "New-shop-the-look"
    }
  ]
}
{% endschema %}
