<div class="look-main ctt_{{ section.id }}">
  <div class="look-inner ">
    <div class="look-btn">
      {% if section.settings.img_icon_banner != blank %}
        {{
          section.settings.img_icon_banner
          | image_url: width: 1600
          | image_tag: width: 1600, height: 1600, class: 'look-btn-img'
        }}
        {{
          section.settings.img_icon_banner_mob
          | image_url: width: 1600
          | image_tag: width: 1600, height: 1600, class: 'look-btn-img-mob'
        }}
        {% else %}

        {% if section.settings.video !=blank  %}
        {{
          section.settings.video
          | media_tag: autoplay: 'autoplay', loop: 'loop', muted: 'muted', playsinline: 'playsinline', controls: false
        }}
          {% endif %}
      {% endif %}

      <div class="look-bottom-streep">
        <div class="look-title">
          <div class="look-title-first">{{ section.settings.head }}</div>
          <div class="look-title-secend">{{ section.settings.sec }}</div>
          <div class="look-title-secend_text">{{ section.settings.sec_text }}</div>
          <div class="look-title-btn">Explore</div>
        </div>
        <div class="look-title-arrow">
