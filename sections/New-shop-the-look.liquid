.ct_popup_d {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
  transition: all 0.2s;
}
  .ct_popup_d.open-pop {
        opacity: 1;
    visibility: visible;
    pointer-events: auto;
    position: fixed;
    top: 0;
    right: 0;
    z-index: 99999;
    height: 100vh;
    width: 100%;
}
.Look_product_main {
    width: 100%;
    max-width: 360px;
    min-height: 100vh;
    position: fixed;
    top: 0;
    right: 0;
    overflow: hidden;
    overflow-y: auto;
    height: 100%;
    background: #fff;
}
  .Look_product_inner {
    overflow: hidden;
    overflow-y: auto;
    height: 100%;
    background: #fff;
}
  .ct_blocker {
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0.7;
    cursor: pointer;
    transition: all 0.2s;
}
  .Look_product_inner .CT_product-block {
    padding-bottom: 30px;
}
 .Look_product_inner  .product-block .block-inner {
    margin: 0;
}

 .Look_product_inner .product-block .product-info {
    padding: 7px 10px 0 10px;
}
  .Look_product_inner_header span {
    font-family: Lato;
