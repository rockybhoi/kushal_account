}
    .Look_product_inner_header {
    display: flex;
    }
    .look-inner {
      padding-left: 0;
      padding-right: 0;
    }
    .look-title-arrow svg {
      transform: translateX(0px);
    }
    .Look_product_inner {
    display: flex;
    width: 100%;
    overflow: auto;
}
.Look_product_main {
    max-width: 100%;
    min-height: auto;
    position: fixed;
    top: auto;
    right: 0;
    bottom: 0 !important;
    overflow: hidden;
    overflow-y: hidden;
    overflow-x: auto;
    height: auto;
  border-radius: 10px 10px 0 0;
          transform: translateY(100%);
        transition-delay: 0.2s;
          transition: all 0.3s;
}
    .ct_popup_d.open-pop .Look_product_main {
