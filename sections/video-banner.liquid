    content: '';
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 100%;
        height: 1px;
    background-color: rgba(219, 219, 219, 1);
    left: 0;
    z-index: -1;
    
} */
    @media(min-width:750px){
        .video-banner-inner video {
          min-height: 65vh;
    max-height: 65vh;
    object-fit: cover;
  }
      .ct_pearl-card-slider-main , .pearls-tab-inner , .pearl-footer-inner {
    padding-left: 7%;
    padding-right: 7%;
}
    }
  @media(max-width:1024px){
    .ct_pearl-card-slider-main, .pearls-tab-inner, .pearl-footer-inner {
    padding-left: 10px;
    padding-right: 10px;
}
  }
    @media(max-width:750px){
      .video-banner-text-inner {
    width: 100%;
    text-align: center;
}
      .video-banner-inner {
      padding-left: 0;
      padding-right: 0;
  }
 img.logobanner-img {
    max-width: 200px;
    display: block;
    width: 100%;
}
      .video-banner-inner video {
      height: 580px;
      object-fit: cover;
      object-position: center;
  }
      .video-banner-text {
    padding: 42px 0 32px 0;
    font-size: 16px;
    line-height: 26px;
        flex-wrap: wrap;
}
    }
</style>

<div class="video-banner-main">
  <div class="video-banner-inner ">
    <div class="video-box">
      {{
        section.settings.video
        | media_tag: autoplay: 'autoplay', loop: 'loop', muted: 'muted', playsinline: 'playsinline', controls: false
      }}
      <a href="{{ section.settings.link }}">Shop The Collection</a>
    </div>
    <div class="video-banner-text">
{% if section.settings.logobanner !=blank %}
      {{
          section.settings.logobanner
          | image_url: width: 800
          | image_tag: width: 800, height: 800, class: 'logobanner-img'
        }}
      {% endif %}
      <div class="video-banner-text-inner">
        {{ section.settings.text }}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "video-banner",
  "class": "video-banner",
  "settings": [
    {
        "type": "url",
        "id": "link",
        "label": "Button Link"
      },
    {
        "type": "video",
        "id": "video",
        "label": "A Shopify-hosted video"
      },
    {
        "type": "image_picker",
        "id": "logobanner",
        "label": "Logo Image"
      },
    {
  "type": "textarea",
  "id": "text",
      "default": "These are the Artistic Details that stand against <br>the tests of time. Go bold, confident and gracious <br> with the beauty of Meenakari with Zircons",
      "label": "sub-text"
}



  ],
  "presets": [{
        "name": "video-banner"
  }]
}
{% endschema %}
