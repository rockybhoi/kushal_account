<style>
    @font-face {
      font-family: 'Maison De Artisan Free';
      src: url('https://cdn.shopify.com/s/files/1/0796/1959/files/MaisonDeArtisanFree-Regular.woff2?v=1717495609') format('woff2');
      font-weight: normal;
      font-style: normal;
      font-display: swap;
  }
    .video-banner-inner video {
      width: 100%;
      height: 100%;
      
  }
    .video-banner-inner .video-box{
      position: relative;
    }
    .video-banner-inner a {
      font-family: Lato;
      font-size: 18px;
      font-weight: 700;
      line-height: 27px;
      text-align: center;
      color: rgba(255, 255, 255, 1);
      position: absolute;
      bottom: 25px;
      z-index: 0;
      left: 50%;
      transform: translateX(-50%);
      border: 2px solid #fff;
      padding: 10px 14px;
      display: inline-block;
      border-radius: 6px;
  }
   .video-banner-text {
    font-family: 'Maison De Artisan Free';
    text-align: left;
    color: rgba(0, 0, 0, 1);
    position: relative;
    padding: 60px 0;
    width: 100%;
    font-size: 21px;
    font-weight: 600;
    line-height: 30px;
    display: flex;
    justify-content: center;
}
.video-banner-text-inner {
    display: inline-block;
    padding: 0 10px;
    background: #fff;
    width: 55%;
}
img.logobanner-img {
    max-width: 300px;
    width: 45%;
    height: 100%;
    display: inline-block;
    margin: 0 auto 10px auto;
}
