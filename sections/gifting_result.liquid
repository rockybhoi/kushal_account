<script>
 $(document).ready(function() {
    $(document).on('click','.cart_open-img',function () {
            $('.gift-result-box').addClass("gift-result-box_active");

            window.setTimeout(function(){
                $('.gift-result-box').addClass("gift-result-box_active_sec");
            }, 800);

        });
  $(document).on('click','.vid_btn',function () {
    jQuery(".ct_video_show").show();
    jQuery(".ct_video_play_show").show();
    jQuery(".ct_video_show").addClass("ct_show_active");
    jQuery(".gift-result-open-ani").hide();
  })
   $(document).on('click','.ct_close_video',function () {
      jQuery(".ct_video_show").removeClass("ct_show_active");
      jQuery(".ct_video_show").hide();
      jQuery(".ct_video_play_show").hide();
     jQuery(".gift-result-open-ani").show();
     
   })
   
  var id=getUrlVars()["id"];
  var shop_url="pkrct.myshopify.com";  
  var url="https://gifting.kushals.com/new_gift_app/data_gift_request.php"
  var data={                        
                "shop_url":shop_url,               
                "method_call":"get_result",
                "uniq":id
            }
        
        $.ajax({
          type: "POST",  
          url: url,    
          data: data,                          
          success: function (response) {
            var obj = jQuery.parseJSON(response);       
           jQuery('.gift_result_main').html(obj.data_html);
          }
       });


 })
  function getUrlVars()
{
    var vars = [], hash;
    var hashes = window.location.href.slice(window.location.href.indexOf('?') + 1).split('&');
    for(var i = 0; i < hashes.length; i++)
    {
        hash = hashes[i].split('=');
        vars.push(hash[0]);
        vars[hash[0]] = hash[1];
    }
    return vars;
}
</script>

