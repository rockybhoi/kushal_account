<div class="ct-store-on-product ct_location" style="display:none" data_lock="{{ section.settings.heading }}">
  <div class="ct-store-on-product-inner">
    <div class="ct-store-on-product-head">{{ section.settings.head_text }}</div>
    <div class="ct-store-on-product-main">

      
      {% for block in section.blocks %}
      <div class="ct-store-on-product-box">
        {% if block.settings.image !=blank %}
        <div class="ct-store-on-productimg">
          <img
            loading="lazy"
            src="{{ block.settings.image | image_url: width: 500 }}"
            data-src="{{ block.settings.image | image_url: width: 500 }}"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            alt="{{ block.settings.image.alt }}"
            class="lazy lazyImage"
          >
          <div class="img_ret">
            <svg xmlns="http://www.w3.org/2000/svg" width="9" height="9" viewBox="0 0 9 9" fill="none">
              <g clip-path="url(#clip0_313_567)"> <path d="M2.15788 8.14837L2.75973 5.54651L0.741211 3.79651L3.40788 3.56503L4.44491 1.11133L5.48195 3.56503L8.14862 3.79651L6.1301 5.54651L6.73195 8.14837L4.44491 6.76874L2.15788 8.14837Z" fill="#FF8A00"/> </g> <defs> <clipPath id="clip0_313_567"> <rect width="8.88889" height="8.88889" fill="white"/> </clipPath> </defs>
            </svg>
                {{ block.settings.reat }}
          </div>
        </div>
                {% endif %}

        <div class="ct-store-on-product-content">
          <div class="ct-store-on-product-store_name">{{ block.settings.text }}</div>
          <div class="ct-store-on-product_addresh">{{ block.settings.addresh }}</div>
          <div class="ct-store-on-product_tel">
            <div class="ct-store-on-product_number">
              <a href="tel:{{ block.settings.tel }}">
                <img
            loading="lazy"
            src="https://cdn.shopify.com/s/files/1/0796/1959/files/Group_34.png?v=1700474412"
            data-src="https://cdn.shopify.com/s/files/1/0796/1959/files/Group_34.png?v=1700474412"
            width="100"
            height="100"
            alt=""
            class="lazy lazyImage"
          >
               
              </a>
            </div>
          </div>
        </div>
                
      </div>
                {% endfor %}

                
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Store",
  "settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "City Name"
      },
     {
        "type": "text",
        "id": "head_text",
        "label": "Main Top heading"
      }
  ],
  "blocks":[{
    "type":"Box",
    "name":"Location Box",
    "settings":[
      {
        "type": "image_picker",
        "id": "image",
        "label": "Store Image"
      },

      {
        "type": "text",
        "id": "reat",
        "label": "Reating",
        "default": "4.9"
      },

      {
        "type": "text",
        "id": "text",
        "label": "Store Title",
        "default": "Phoenix Market City"
      },
      {
        "type": "text",
        "id": "addresh",
        "label": "Addresh Text",
        "default": "F-52, 1st Floor,Viman Nagar Raod,Pune - 411014"
      },
      {
        "type": "text",
        "id": "tel",
        "label": "Phone Number"
      }



    ]
  }],
  "presets":[
    {
      "name": "Product Store"
    }
  ]
}
{% endschema %}

