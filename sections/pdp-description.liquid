<div class="desktop-hide {% unless section.settings.show_in_quickbuy %}not-in-quickbuy{% endunless %}{% if section.settings.show_in_tab %} product-detail-accordion{% endif %}" {{ section.shopify_attributes }}>
  <div class="container">
    {% if section.settings.show_in_tab %}
      {%- capture accordion_title -%}
        {%- if section.settings.icon == blank -%}
          {{- 'products.product.description' | t -}}
        {%- else -%}
          <div class="with-icon">
            {% render 'icon', icon: section.settings.icon, size: 'small' %}
            <span class="with-icon__beside">{{ 'products.product.description' | t }}</span>
          </div>
        {%- endif -%}
      {%- endcapture -%}
      {% render 'accordion', allow_multi_open: true, add_content_class: 'rte cf', first_item_open: section.settings.open_tab, item1_title: accordion_title, item1_content: product.description %}
    {% else %}
      <div class="product-description rte cf">
        {%- if section.settings.icon == blank -%}
          {{- product.description -}}
        {%- else -%}
          <div class="with-icon">
            {% render 'icon', icon: section.settings.icon, size: 'small' %}
            <span class="with-icon__beside">{{ product.description | replace: '<img src=', '<img loading="lazy" src=' }}</span>
          </div>
        {%- endif -%}
      </div>
    {% endif %}
  </div>
</div>

