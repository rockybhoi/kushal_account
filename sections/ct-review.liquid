<style>
 .user_review_img {
    width: 100%;
    max-width: 120px;
    border-radius: 100%;
    margin: 0 auto;
}
  .user_reating_img {
    width: 100%;
    max-width: 128px;
    margin: 8px auto 0 auto;
}
  .review_text {
    color: #3E3E3E;
    text-align: center;
    font-size: 17px;
    max-width: 100%;
    margin: 15px auto 0 auto;
    padding: 0 35px;
    font-style: normal;
    font-weight: 400;
    line-height: 24px; 
    letter-spacing: 1px;
}
 
  .ct-review-box {
    transition: all 0.3s ease;
    padding: 0px 0 0 0;
    transform: scale(1);
}
 .ct-review .slick-active {
    opacity: 0.4;
}
.ct-review  .slick-center {
    opacity: 1;
  padding: 0px 0 0 0;
  transform: scale(1);
}
.ct-review  .slick-center  .review_text {
        color: #3E3E3E;
    text-align: center;
    font-size: 20px;
    font-style: normal;
    font-weight: 400;
    line-height: 28px;
    letter-spacing: 1.2px;
    max-width: 100%;
    margin: 15px auto 0 auto;
    padding: 0 35px;
  }
.ct-review  .slick-center .user_review_img {
    max-width: 150px;
      border: 1px solid #CF2228;
    padding: 1px;
  }
 .ct-review-main {
    position: relative;
}
  ul.revi-icon li svg {
    width: 64px;
    height: 64px;
}
  .ct-review {
    padding: 0 72px;
}
  ul.revi-icon {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 100%;
    display: flex;
    justify-content: space-between;
    margin: 0;
}
   .ct-review .slick-dots li button {
    display: flex !important;
    justify-content: center !important;
    border-radius: 10px !important;
    border: 0px solid #a02828 !important;
    background: #d9d9d9 !important;
    width: 8px !important;
    margin-bottom: 0 !important;
    height: 8px !important;
    margin-left: 0px !important;
}
   .ct-review .slick-dots li {
    height: 11px;
    width: 13px;
  }
   .ct-review .slick-dots .slick-active button {
    background-color: #5e5d5d!important;
    opacity: 1 !important;
} 
   .ct-review .slick-dots .slick-active {
     opacity: 1 !important;
   } 
   .ct-review .slick-dots {
    margin: 15px 0 0 0;
     display:none;
  }
  /* .ct-review-main .slick-track {
    height: 350px;
} */
.coll_head {
    text-align: center;
    font-family: lato;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    margin: 52px 0 70px 0;
    font-size: 29px;
    margin-bottom: 20px;
    color: rgba(69, 69, 69, 1);
}
    @media(max-width:1100px){
    .ct-review-box {
    padding: 0px 0 0 0;
    transform: scale(1);
}
      .coll_head {
    font-size: 18px;
        font-weight:700;
    margin: 31px 0 26px 0;
        text-align:left;
}
      .ct-review  .user_review_img {
    max-width: 92px !important;
}
      .user_reating_img {
    max-width: 77px !important;
    margin: 5px auto 0 auto !important;
}
      .ct-review .review_text {
    font-size: 14px !important;
    line-height: 16px !important;
    letter-spacing: 1px !important;
    max-width: 247px !important;
    margin: 10px auto 0 auto !important;
    padding: 0 0px !important;
}
      .ct-review .slick-dots li button {
    height: 10px;
    width: 10px;
}
      .ct-review .slick-dots li {
    height: 11px;
    width: 14px;
}
      ul.revi-icon li{
        display:none;
      }
      .ct-review  .slick-center {
    opacity: 1;
  padding: 0px 0 0 0;
  transform: scale(1);
}
        .ct-review-box {
    transition: all 0s ease;
    transform: scale(1);
}
       .ct-review .slick-active {
    opacity:1;
}
   
  }
</style>
<div class="ct-review-main">
  <div class="ct-review-inner container container--not-mobile">
    <div class="coll_head">Customer Reviews</div>
    
    <div class=" ct-review-main">
    <div class="slider ct-review">
      {% for block in section.blocks %}
        <div class=" ct-review-box">
          <img
            loading="lazy"
            src="{{ block.settings.image | img_url: '1024x1024' }}"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            alt="{{ block.settings.image.alt | escape }}"
            class="rimage__image user_review_img"
          >
          <img
            loading="lazy"
            src="{{ block.settings.image1 | img_url: '1024x1024' }}"
            width="{{ block.settings.image1.width }}"
            height="{{ block.settings.image1.height }}"
            alt="{{ block.settings.image1.alt | escape }}"
            class="rimage__image user_reating_img"
          >
          <div class="review_text">{{ block.settings['re-text'] }}</div>
        </div>
      {% endfor %}
    </div>
      <ul class="revi-icon">
