          </svg>
        </li>
    </ul>
    </div>
  </div>
</div>

<script>
    $(document).ready(function(){
  $('.ct-review').slick({
    infinite: true,
    slidesToShow: 3,
    dots: true,
    infinite: true,
    arrows: true,
    slidesToScroll: 1,
    centerMode: true,
    centerPadding: '0px',
    prevArrow: $('.prev'),
    nextArrow: $('.next'),
    responsive: [
    {
      breakpoint: 1100,
      settings: {
        slidesToShow: 1,
         arrows: false,
      }
    }
  ]
  });
  });
</script>

