<style>
  .banner_with_button_inner img {
    width: 100%;
    height: 100%;
}
  .banner_with_button_inner  {
    position:relative;
    line-height: 0;
}
  img.image_mobile {
    display: none;
}
  .banner_with_button_inner a {
    position: absolute;
    bottom: 17px;
    left: 50%;
    transform: translate(-50%, 0px);
    border: 1px solid #fff;
    color: rgba(255, 255, 255, 1);
    font-family: Lato;
    font-size: 18px;
    font-weight: 700;
    line-height: 27px;
    text-align: center;
    border-radius: 6px;
    padding: 10px 14px;
    white-space: nowrap;
}
  @media(max-width:767px){
    img.image_desk {
    display: none;
}
    img.image_mobile {
    display: block;
}
  }
</style>
<div class="banner_with_button-main">
  <div class="banner_with_button_inner">
    {% if section.settings.desk !=blank %}
    {{ section.settings.desk | image_url: width: 1500 | image_tag: widths: '800,1200,1500' , class:'image_desk' }}
    {{ section.settings.mobile | image_url: width: 750 | image_tag: widths: '300, 600' , class:'image_mobile'   }}
    {% endif %}
    {% if section.settings.link_text !=blank %}
    <a href="{{ section.settings.link }}">{{ section.settings.link_text }}</a>
    {% endif %}
  </div>
</div>
{% schema %}
{
  "name": "Banner With Button",
  "class": "banner_with_button",
  "settings": [
    {
      "type": "image_picker",
      "id": "desk",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mobile",
      "label": "Mobile Image"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Button Text"
    }


  ],
  "presets": [
    {
      "name": "Banner With Button"
    }
  ]
}
{% endschema %}
