<style>
  .my_video_background_banner , .my_video_background_banner  video{
    width: 100%;
    border-radius: 4px;
}
  div#audio-control {
    border: 1px solid #A19F9F30;
    background: #29292930;
    padding: 0;
    width: 36px;
    height: 36px;
    border-radius: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    right: 10px;
    top: 10px;
}
  .my_video_background_banner {
    position: relative;
    line-height: 0;
}
  div#audio-control svg {
    width: 20px;
    height: auto;
}
  .muted .play_svg {
    display: none;
}
  .unmuted .play_mute_svg{
    display: none;
  }
  @media(max-width:750px){
   .my_video_background_banner , .my_video_background_banner  video{
    border-radius: 0px;
}
    .Video-banner-with-mute-button .container {
    padding: 0;
}
    .my_video_background_banner video {
    aspect-ratio: 1/1;
    object-fit: cover;
    object-position: center;
}
    .my_video_background_banner {
    margin-bottom: 32px;
}
  }
</style>

