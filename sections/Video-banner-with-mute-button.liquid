<script>
$('#audio-control').click(function(){
    if( $("#myVideo").prop('muted') ) {
        $("#myVideo").prop('muted', false);
        // $(this).text('Mute');
        $(this).removeClass('muted').addClass('unmuted'); // Add this line
    } else {
        $("#myVideo").prop('muted', true);
        // $(this).text('Unmute');
        $(this).removeClass('unmuted').addClass('muted'); // Add this line
    }
});

</script>



