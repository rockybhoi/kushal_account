<style>
  .Backgroung-img{
    display:none;
    position: relative;
    margin:32px 0 0px 0;
  }
  .Backgroung-img a {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border: 1px solid #454545;
    color: #454545;
    font-family: Lato;
    font-size: 18px;
    font-weight: 700;
    line-height: 27px;
    text-align: center;
    border-radius: 6px;
    padding: 10px 14px;
    white-space: nowrap;
}
  @media(max-width:750px){
  .Backgroung-img{
    display:block;
    line-height: 0;
  }
  }
</style>

<div class="Backgroung-img">
  {% if section.settings.img != blank %}
    <img src="{{ section.settings.img | img_url:"master" }}">
  <a href="{{ section.settings.link }}">Shop The Collection</a>
  {% endif %}
</div>
{% schema %}
  {
    "name": "Backgroung-img-button",
    "class": "Backgroung-img-with-button",
    "settings": [
      {
        "type": "image_picker",
        "id": "img",
        "label": "BG Image"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      }
    ],
    "presets": [{
    "name": "Backgroung-img-button"
    }]
  }
{% endschema %}